<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Better Bagwork Custom Theme - Dark Minimalist -->
    <!-- WICHTIG: parent="Light" nicht "DayNight" = kein automatischer Theme-Wechsel! -->
    <style name="Base.Theme.BetterBagwork" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary Colors (Hauptfarben) -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>

        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Weiße Icons! -->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- Window Background -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.BetterBagwork.Button</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.BetterBagwork.CardView</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.BetterBagwork.BottomNavigation</item>

        <!-- Material Alert Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.BetterBagwork.MaterialAlertDialog</item>
    </style>

    <style name="Theme.BetterBagwork" parent="Base.Theme.BetterBagwork" />

    <!-- Custom Button Style -->
    <style name="Widget.BetterBagwork.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/primary_red</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.BetterBagwork.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.BetterBagwork.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">@color/surface_dark</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">#10C62828</item>
    </style>

    <!-- Material Alert Dialog Theme (Dark) - Simplified -->
    <style name="ThemeOverlay.BetterBagwork.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.BetterBagwork.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.BetterBagwork.Button.Dialog</item>
    </style>

    <!-- Dialog Button Style -->
    <style name="Widget.BetterBagwork.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_red</item>
    </style>

    <!-- NumberPicker Style für Dark Theme -->
    <style name="NumberPickerTheme" parent="Theme.Material3.Dark">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/primary_red</item>
    </style>

</resources>