<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Workout Name -->
        <TextView
            android:id="@+id/txtWorkoutName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtStatus"/>

        <!-- Status Badge (Abgeschlossen/Abgebrochen) -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abgeschlossen"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/status_badge_completed"
            android:padding="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/txtWorkoutName"
            app:layout_constraintBottom_toBottomOf="@id/txtWorkoutName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Datum -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.12.2024 18:30"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtWorkoutName"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Info-Zeile: Runden & Dauer -->
        <TextView
            android:id="@+id/txtRounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/5 Runden"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:00 Min"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/txtRounds"
            app:layout_constraintBottom_toBottomOf="@id/txtRounds"
            app:layout_constraintStart_toEndOf="@id/txtRounds"/>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteHistory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="LÃ¶schen"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_delete"
            app:iconSize="18dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/error"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtRounds"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>