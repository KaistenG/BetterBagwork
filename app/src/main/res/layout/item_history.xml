<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Zeile 1: Workout Name + Status Badge -->
        <TextView
            android:id="@+id/txtWorkoutName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtStatus"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abgeschlossen"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/status_badge_completed"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/txtWorkoutName"
            app:layout_constraintBottom_toBottomOf="@id/txtWorkoutName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Zeile 2: Datum -->

        <!-- Zeile 3: Runden + Dauer + Delete Button -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="01.12.2024 18:30"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtWorkoutName" />

        <TextView
            android:id="@+id/txtRounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/5 Runden"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:00 Min"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/txtRounds"
            app:layout_constraintBottom_toBottomOf="@id/txtRounds"
            app:layout_constraintStart_toEndOf="@id/txtRounds"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteHistory"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            android:contentDescription="LÃ¶schen"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_delete"
            app:iconSize="16dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/error"
            app:layout_constraintTop_toTopOf="@id/txtRounds"
            app:layout_constraintBottom_toBottomOf="@id/txtRounds"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>