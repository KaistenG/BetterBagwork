<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#1a1a1a">

    <!-- Status (TRAINING / PAUSE) -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRAINING"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="24dp"/>

    <!-- GroÃŸe Timer-Anzeige -->
    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:00"
        android:textSize="96sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        android:layout_marginBottom="32dp"/>

    <!-- Aktuelle Runde -->
    <TextView
        android:id="@+id/txtCurrentRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runde 1 / 5"
        android:textSize="24sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="48dp"/>

    <!-- Aktuelle Kombination -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/combination_box_background"
        android:padding="24dp"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKTUELLE KOMBINATION:"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/txtCurrentCombination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warte auf Start..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPauseResume"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_pause"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="56dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="56dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_stop"
            app:iconGravity="textStart"
            app:iconSize="56dp"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"/>

    </LinearLayout>
</LinearLayout>