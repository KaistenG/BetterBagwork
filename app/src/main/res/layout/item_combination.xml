<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name und Anzahl in einer Zeile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtCombinationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kombination Name"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtMoveCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Schläge"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Schlag-Reihenfolge -->
        <TextView
            android:id="@+id/txtCombinationMoves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jab → Cross → Left Hook"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDeleteCombination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Löschen"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>